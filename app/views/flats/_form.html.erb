<%= form_for(flat) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :address, class: "form-label" %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
    <div class="mb-3">
    <%= f.label :picture_url, class: "form-label" %>
    <%= f.text_field :picture_url, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :address, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :number_of_guests, class: "form-label" %>
    <%= f.number_field :number_of_guests, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :price_per_night, class: "form-label" %>
    <%= f.number_field :price_per_night, class: 'form-control' %>
